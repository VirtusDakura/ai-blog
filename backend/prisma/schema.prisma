generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

generator clientFrontend {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
  output          = "../../frontend/node_modules/.prisma/client"
}

datasource db {
  provider   = "postgresql"
  extensions = [vector]
}

enum RoleType {
  USER
  ADMIN
  EDITOR
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
}

enum CommentStatus {
  PENDING
  APPROVED
  REJECTED
  SPAM
}

enum PageStatus {
  DRAFT
  PUBLISHED
}

enum SubscriberStatus {
  ACTIVE
  UNSUBSCRIBED
  BOUNCED
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  SENT
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String

  firstName          String?
  lastName           String?
  displayName        String?
  bio                String?
  avatarUrl          String?
  timezone           String?
  language           String?  @default("en")
  onboardingCompleted Boolean @default(false)

  role RoleType @default(USER)

  blog           Blog?
  posts          Post[]
  comments       Comment[]
  aiLogs         AILog[]
  media          Media[]
  passwordResets PasswordReset[]
  pages          Page[]
  categories     Category[]
  tags           Tag[]
  subscribers    Subscriber[]
  campaigns      Campaign[]
  donations      Donation[]
  
  accounts      Account[]
  sessions      Session[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([createdAt(sort: Desc)])
  @@map("users")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model PasswordReset {
  id        String   @id @default(uuid())
  token     String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@index([token])
  @@index([userId])
  @@map("password_resets")
}

model Blog {
  id          String  @id @default(uuid())
  name        String
  description String?
  subdomain   String  @unique
  customDomain String?
  
  category    String?
  theme       String  @default("minimal")
  colorScheme String  @default("violet")
  font        String  @default("inter")
  layout      String  @default("standard")
  darkMode    String  @default("system")
  
  logoUrl     String?
  faviconUrl  String?
  customCss   String? @db.Text
  headerCode  String? @db.Text
  footerCode  String? @db.Text
  
  // Privacy settings
  isPublic         Boolean @default(true)
  allowComments    Boolean @default(true)
  moderateComments Boolean @default(true)
  showAuthorBio    Boolean @default(true)
  enableRss        Boolean @default(true)
  allowIndexing    Boolean @default(true)
  
  // SEO settings
  seoTitle         String?
  seoDescription   String?
  seoKeywords      String?
  ogImage          String?
  twitterHandle    String?
  facebookPage     String?
  enableSitemap    Boolean @default(true)
  enableJsonLd     Boolean @default(true)
  canonicalUrl     String?
  
  // Notification settings
  emailOnComment    Boolean @default(true)
  emailOnSubscriber Boolean @default(true)
  emailDigest       String  @default("weekly")
  
  // Monetization settings
  donationsEnabled     Boolean @default(false)
  donationMessage      String?
  suggestedAmounts     String? // JSON array
  stripeConnected      Boolean @default(false)
  stripeAccountId      String?
  paypalEmail          String?
  minimumPayout        Int     @default(50)
  
  // Ads settings
  adsEnabled       Boolean @default(false)
  adsProvider      String? // google, carbon, custom
  adsPublisherId   String?
  autoAds          Boolean @default(false)
  adsTxt           String? @db.Text
  adPlacements     String? @db.Text // JSON
  
  // Analytics
  analyticsId      String?
  
  userId      String  @unique
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([subdomain])
  @@index([userId])
  @@map("blogs")
}

model Post {
  id         String  @id @default(uuid())
  title      String
  slug       String  @unique
  content    String  @db.Text
  excerpt    String?
  coverImage String?

  publishedAt DateTime?
  isPublished Boolean   @default(false)

  seoTitle       String?
  seoDescription String?
  seoKeywords    String[]
  
  // Category relation
  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  comments   Comment[]
  media      Media[]
  embeddings Embedding[]
  tags       PostTag[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([authorId])
  @@index([categoryId])
  @@index([createdAt(sort: Desc)])
  @@index([isPublished, publishedAt(sort: Desc)])
  @@map("posts")
}

model Category {
  id          String @id @default(uuid())
  name        String
  slug        String
  description String?
  color       String @default("#8b5cf6")
  sortOrder   Int    @default(0)
  
  userId      String
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  posts       Post[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([userId, slug])
  @@index([userId])
  @@map("categories")
}

model Tag {
  id     String @id @default(uuid())
  name   String
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  posts  PostTag[]
  
  createdAt DateTime @default(now())
  
  @@unique([userId, name])
  @@index([userId])
  @@map("tags")
}

model PostTag {
  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  tagId  String
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)
  
  @@id([postId, tagId])
  @@map("post_tags")
}

model Comment {
  id      String        @id @default(uuid())
  content String        @db.Text
  status  CommentStatus @default(PENDING)
  
  // Guest comments
  guestName  String?
  guestEmail String?

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  // Logged in user comments
  authorId String?
  author   User?   @relation(fields: [authorId], references: [id])

  parentId String?
  parent   Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies  Comment[] @relation("CommentReplies")

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([postId])
  @@index([authorId])
  @@index([status])
  @@map("comments")
}

model Page {
  id       String     @id @default(uuid())
  title    String
  slug     String
  content  String     @db.Text
  template String     @default("default")
  status   PageStatus @default(DRAFT)
  isSystem Boolean    @default(false)
  sortOrder Int       @default(0)
  
  // SEO
  seoTitle       String?
  seoDescription String?
  
  userId   String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, slug])
  @@index([userId])
  @@map("pages")
}

model Subscriber {
  id     String           @id @default(uuid())
  email  String
  name   String?
  status SubscriberStatus @default(ACTIVE)
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  confirmedAt   DateTime?
  unsubscribedAt DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, email])
  @@index([userId])
  @@index([status])
  @@map("subscribers")
}

model Campaign {
  id         String         @id @default(uuid())
  subject    String
  content    String         @db.Text
  status     CampaignStatus @default(DRAFT)
  
  recipients Int @default(0)
  opened     Int @default(0)
  clicked    Int @default(0)
  
  scheduledAt DateTime?
  sentAt      DateTime?
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
  @@index([status])
  @@map("campaigns")
}

model Donation {
  id      String @id @default(uuid())
  amount  Float
  message String?
  
  donorName  String?
  donorEmail String?
  
  stripePaymentId String?
  paypalPaymentId String?
  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt(sort: Desc)])
  @@map("donations")
}

model Integration {
  id       String  @id @default(uuid())
  name     String  // e.g. "google-analytics", "disqus"
  enabled  Boolean @default(false)
  settings String? @db.Text // JSON settings
  
  blogId   String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([blogId, name])
  @@index([blogId])
  @@map("integrations")
}

model Media {
  id       String    @id @default(uuid())
  url      String
  filename String
  mimeType String?
  size     Int?
  type     MediaType @default(IMAGE)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  postId String?
  post   Post?   @relation(fields: [postId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([userId])
  @@index([postId])
  @@map("media")
}

model AILog {
  id         String @id @default(uuid())
  action     String // e.g. "generate_post", "summarize"
  model      String // e.g. "gpt-4", "claude-3"
  prompt     String @db.Text
  response   String @db.Text
  tokensUsed Int?
  cost       Float? // Estimated cost

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt(sort: Desc)])
  @@map("ai_logs")
}

model Embedding {
  id     String                @id @default(uuid())
  vector Unsupported("vector") // 1024 dims (bge-large)

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  chunkIndex Int? // If content is split into chunks
  content    String? // The text chunk content

  createdAt DateTime @default(now())

  @@index([postId])
  @@map("embeddings")
}
